<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainMenuTitle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>

    <style name="MainMenuButtons">
        <item name="android:elevation">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <style name="numpadButtons">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
