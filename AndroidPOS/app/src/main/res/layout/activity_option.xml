<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionActivity">

    <TextView
        android:id="@+id/Option_Title1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#4D000000"
        android:gravity="center"
        android:text="앱 설정"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#26000000"
        android:gravity="center_vertical"
        android:text="\t네트워크 설정"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/IPEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint=" IP"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:digits="1234567890." />

    <EditText
        android:id="@+id/PWEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:ems="10"
        android:hint=" PW"
        android:inputType="textPassword" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#26000000"
        android:gravity="center_vertical"
        android:text="\t알림 설정"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="\t매출 변동 알림"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="\t제품 입고 알림"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="\t점심 시간 알림"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="\t저녁 시간 알림"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Option_Title2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#4D000000"
        android:gravity="center"
        android:text="앱 정보"
        android:textColor="#000000"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="\t앱 버젼: 1.0.0"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/upbutton"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="업데이트 확인" />
    </LinearLayout>

    <TextView
        android:id="@+id/i2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="\t공지사항"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/i3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="\t문의하기"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/i4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="\t앱 권한정보"
        android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>